#include "FreeRTOS.h"
#include "task.h"

#include "NonThreadSafeAPI.h"

void NonThreadSafeAPI( UBaseType_t uxCount, UBaseType_t uxUseBusyWait )
{
	/* Declare the variable volatile so that the busy loop
	 * doesn't get optimized away. */
	volatile UBaseType_t uxCounter;

	if( uxUseBusyWait == 0 )
	{
	    vTaskDelay( pdMS_TO_TICKS( uxCount ) );
	}
	else
	{
        for( uxCounter = 0; uxCounter < uxCount;  )
        {
        	/* Busy wait. */
        	uxCounter++;
        }
	}
}
